<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/ll_logo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/main_header_logo"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingStart="50dp"
        android:paddingLeft="50dp"
        android:paddingEnd="50dp"
        android:paddingRight="50dp"
        android:src="@drawable/logo" />

    <View
        android:id="@+id/main_logo_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_logo_divider_height"
        android:layout_marginEnd="@dimen/main_logo_divider_margin_start_end"
        android:layout_marginLeft="@dimen/main_logo_divider_margin_start_end"
        android:layout_marginRight="@dimen/main_logo_divider_margin_start_end"
        android:layout_marginStart="@dimen/main_logo_divider_margin_start_end"
        android:layout_marginTop="@dimen/main_logo_divider_margin_top"
        android:background="@color/colorPrimary" />

</LinearLayout>